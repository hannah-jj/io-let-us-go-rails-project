<input type="text" id="new-comment">
<button class="add-comment btn btn-info">Add Comment</button>
<table class="table table-striped table-hover">
	<tbody class="comments-table">
		{{#if comments}}
			{{#each comments}}
			  <tr class="info">
			    <td>{{attributes.note}}</td>
			    <td>{{attributes.email}}</td>
			    <td align="right"><a class="btn-info" href="/events/{{attributes.event-id}}/comments/{{id}}">view</td>
			  </tr>
			{{/each}}
		{{else}}
			<tr class="no-comment"><td>no comments yet</td></tr>
		{{/if}}
	</tbody>
</table>

