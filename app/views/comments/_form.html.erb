<%= form_for(comment) do |f| %>
      <div class="field"> <%= f.hidden_field :user_id, :value=>current_user.id %></div>
      <div class="field"> <%= f.hidden_field :event_id, :value=>event.id %></div>

      <div class="field"> <%= f.label :note %><br>
      <%= f.text_area :note %></div>

      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>