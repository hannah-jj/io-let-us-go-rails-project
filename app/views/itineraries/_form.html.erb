<%= form_for(itinerary) do |f| %>
      
      <div class="field"> <%= f.hidden_field :event_id, :value=>event.id %></div>

      <div class="field"> <%= f.label :note %><br>
      <%= f.text_area :note %></div>

      <div class="field"> <%= f.label :location %><br>
      <%= f.text_area :location %></div>

      <div class="field"> <%= f.label :time %><br>
      <%= f.time_select :time %></div>


      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>