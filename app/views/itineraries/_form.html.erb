<% if @itinerary.errors.any? %>
  <div class="alert-danger">
    <ul>
      <%= @itinerary.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(itinerary) do |f| %>
      
      <div class="field"> <%= f.hidden_field :event_id, :value=>event.id %></div>

      <div class="field"> <%= f.label :note %><br>
      <%= f.text_area :note %></div>

      <div class="field"> <%= f.label :location %><br>
      <%= f.text_area :location %></div>

      <div class="field"> <%= f.label :meet_day %><br>
      <%= f.date_select :meet_day, :min => Date.today.year%></div>

      <div class="field"> <%= f.label :meet_time %><br>
      <%= f.time_select :meet_time, :min => Date.today.year%></div>


      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>