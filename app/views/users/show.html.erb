<header style="background-image: url('http://i.imgur.com/ZCC1P2j.jpg')">
    <div class="header-content">
        <div class="header-content-inner">
            <h1  style="font-size: 58.9167px;" class="main-user" user-id="<%=@user.id%>">Hello <%= current_user.name%></h1>
            <p>Here are <%= current_user == @user ? "your" : "#{@user.email}'s" %> events.  Have fun!</p>
            <p><%= link_to "Check out your upcoming itineraries", upcoming_user_path(@user), :class=>"btn btn-primary btn-lg"%></p>
       	</div>
    </div>    
</header>

<section class="no-padding">
    <div id="proftab" class="container">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a data-toggle="tab" href="#organized" aria-controls="organized">Organized Events</a></li>
            <li role="presentation"><a data-toggle="tab" href="#participation" aria-controls="participation">Participating Events</a></li>
        </ul>

        <div class="tab-content">
            <div id="organized" role="tabpanel" class="tab-pane fade in active">
                <div class="col-lg-12 text-center">
                    <h1 style="font-size: 30e;"><%= current_user == @user ? "you have" : "#{@user.email} has" %> organized below events: </h1>
                </div>
            
                <div class="container-fluid">
                    <div class="organized-meetings row no-gutter"
            <!-- to display meetings organized by this user -->
                    </div>
                </div>
            </div>

            <div id="participation" role="tabpanel" class="tab-pane fade">
                <div class="col-lg-12 text-center">
                    <h1 id="typography"> Events that <%= current_user == @user ? "you have" : "#{@user.email} has" %> noted participation:</h1>
                </div>
                <div class="container-fluid">
                    <div class="participating-events row no-gutter">
        <!-- to display events this user is participating -->
                    </div>
                </div>
            </div>
        </div>
</section>
            

	    
