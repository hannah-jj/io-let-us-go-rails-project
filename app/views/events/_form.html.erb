

<% if !@event.valid? %>
  <div class="alert-danger"><%= @event.errors.messages %></div>
<% end %>


<%= form_for(@event) do |f| %>

  <div class="form-group">
    <%= f.label :title, :class=>"col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, :class=>"col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :location, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_day, :class=>"col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :event_day, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.hidden_field :organizer_id, :value=>current_user.id %>
  </div>

  <div class="form-group">
    <%= f.label :note, :class=>"col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :note, :class=>"form-control" %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit%>
  </div>
<% end %>

